<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_project_tree" model="ir.ui.view">
        <field name="name">project.tree</field>
        <field name="model">project</field>
        <field name="arch" type="xml">
            <tree string="project Tree" class="text-center"  decoration-danger="project_state == 'new'" decoration-warning="project_state == 'in_progress'" decoration-success="project_state == 'completed'">
                <field name="seq"/>
                <field name="name" class="text-start" />
                <field name="dead_line" />
                <field name="project_manager_id" />
                <field class="btn btn-seconary" name="project_state" decoration-danger="project_state == 'new'" decoration-warning="project_state == 'in_progress'" decoration-success="project_state == 'completed'"/>

                <field name="start_time" />
                <field name="end_time" />
                <field name="total_time" />
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_project_form" model="ir.ui.view">
        <field name="name">project.form</field>
        <field name="model">project</field>
        <field name="arch" type="xml">
            <form string="My Model Form">
                <header>
<!--                       <button name="action" string="Action" type="object"/>-->
<!--                       <button  name="action_draft" string="Set To Draft" type="object" class="btn22"-->
<!--                                attrs="{'invisible': [('state', '==', 'draft')]}"/>-->
<!--                       <button  name="action_pending" type="object" class="btn23" string="Pending"-->
<!--                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>-->
<!--                       <button  name="action_done" type="object" class="btn24" string="Done"-->
<!--                                attrs="{'invisible': [('state', '!=', 'pending')]}"/>-->
<!--                    -->
                       <button name="action_in_progress" type="object" class="oe_highlight" string="Start"
                                attrs="{'invisible': [('project_state', '!=', 'new'),('project_state', '!=', 'completed')]}"/>
                       <button name="action_completed" type="object" class="oe_highlight btn btn-primary" string="Completed"
                                attrs="{'invisible': [('project_state', '!=', 'in_progress')]}"/>
                       <field name="project_state" widget="statusbar" statusbar_visible="new,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
<!--                          <label for="ref"/>-->
                          <h1>
                              <field name="seq" decoration-danger="project_state == 'new'" decoration-warning="project_state == 'in_progress'" decoration-success="project_state == 'completed'"/>
                          </h1>
                      </div>

                    <group>
                        <field name="name"/>
                        <field name="dead_line"/>
                        <field name="project_manager_id"/>
                        <!-- <field name="state"/> -->
                    </group>
                    <group>

                    <field name="start_time" />
                    <field name="end_time" />
                    <field name="total_time" />
                        <field name="task_line_count" invisible="1"/>
                    </group>

                    <notebook>
                        <page string="Tasks">
                            <field name="task_line_ids" >
                                <tree editable="bottom" decoration-danger="state == 'new'" decoration-warning="state == 'in_progress'" decoration-success="state == 'completed'">
                                    <field name="task_id" widget='many2one'/>
                                    <field name="assign_to"/>
                                    <field name="description"/>
                                    <field name="due_date"/>
                                    <field name="state" class="btn btn-seconary" />
                                    <field name="name" invisible="1"/>
                                    <!-- <field class="btn btn-seconary" name="project_state" decoration-danger="project_state == 'new'" decoration-warning="project_state == 'in_progress'" decoration-success="project_state == 'completed'"/> -->

                                </tree>
                                <form string="Task">
                                <sheet>
                                    <group>
                                        <field name="name"/>
                                    </group>
                                    <notebook>
                                        <page string="Subtasks">
                                            <field name="subtask_ids">
                                                <tree editable="bottom">
                                                    <field name="name"/>
                                                    <field name="description"/>
                                                    <field name="state"/>
                                                </tree>
                                            </field>
                                        </page>
                                    </notebook>
                                </sheet>
                            </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter" >
                   <field name="message_follower_ids"/>
                   <field name="activity_ids"/>
                   <field name="message_ids"/>
               </div>
            </form>
        </field>
    </record>

    <!-- Action to open the model -->
    <record id="action_project" model="ir.actions.act_window">
        <field name="name">projects</field>
        <field name="res_model">project</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new record.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="projects_menu_list" name="All Projects" parent="project_menu" action="action_project"/>
</odoo>
