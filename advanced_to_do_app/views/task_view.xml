<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">task.tree</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <tree string="Task Tree" class="text-center" decoration-danger="state == 'new'" decoration-warning="state == 'in_progress'" decoration-success="state == 'completed'">
                <field name="seq"/>
                <field name="name" class="text-start"/>
                <field name="assign_to"/>
                <field name="description"/>
                <field name="due_date"/>
                <field name="start_time" />
                <field name="end_time" />
                <field name="total_time" />
                <field name="active" />

                <field class="btn btn-seconary" name="state" decoration-danger="state == 'new'" decoration-warning="state == 'in_progress'" decoration-success="state == 'completed'" />
                <field name="project_name" />
            </tree>
        </field>
    </record>

